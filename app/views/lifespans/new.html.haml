= render :partial => "/shared/header", :locals => { :title => @species.name, :subtitle => "", :flash => flash }

%h2 Adding Lifespan

- form_for :age, :url => { :action => :create } do |f|
  .form_input
    = f.label :maximum_longevity, "Lifespan"
    %br
    = f.text_field :maximum_longevity, :class => "text", :style => "width: 50px"
    = f.select :units, ["Years", "Months", "Days", "Hours", "Minutes"]
  
  .form_input
    [Citation Form]
  
  .form_input
    %button{:type => "submit", :name => "commit", :value => "Create", :class => 'button positive', :id => "create-annotation"} Add Lifespan
    = link_to "Cancel", @species, :class => "button"