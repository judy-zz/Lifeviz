#uiheader
  #header
    %h2= link_to "LifeViz", root_path
  #options
    #login-buttons
      %h3
        - if logged_in?
          Karma [34] (Contributor)
          |
          = link_to current_user.name, edit_user_path(current_user)
          |
          = link_to "Log out", user_session_path, :method => :delete
        - else
          Powered by Karma!
          |
          = link_to "Log in", "#", :id => "login_button"
          |
          = link_to "Sign up", new_user_path
    #login
      - form_tag user_session_path, :method => :post do
        .form-row.clearfix
          #standard
            .title
              %strong Login with Email
              = link_to "Use OpenID", "#", :class => "openid_button"
            .email
              = text_field_tag 'user[email]', '', :class => 'text', :title => "Email"
            .password
              = password_field_tag 'user[password]', '', :class => 'text', :title => "Password"
          #openid
            .title
              %strong Login with OpenID
              = link_to "Use Standard", "#", :class => "regular_button"
            .openid
              = text_field_tag 'user[openid_identifier]', '', :class => 'text', :title => "OpenID"
          #login-defaults
            .submit.buttons
              %button{:type => "submit", :name => "commit", :value => "Login", :class => 'button positive'} Login
              = link_to "Cancel", "#", :id => "login_cancel_button", :class => "button"
        
#flash
  = render :partial => "/shared/flash", :locals => { :flash => flash }
