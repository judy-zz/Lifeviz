#karma-widget
  - if logged_in?
    - if current_user.karma.connected?
      #karma
        Karma:
        = current_user.karma.total
      #achievements
        Level:
        - if current_user.karma.levels.gold?
          %span.gold Gold
        - elsif current_user.karma.levels.silver?
          %span.silver Silver
        - elsif current_user.karma.levels.bronze?
          %span.bronze Bronze
        - else
          %span.detail *dust*
    - else
      %h5 Karma is unavailable.
        
  - else
    %h5
      Powered by
      %span.karma-purple Karma!

- if flash[:karma_updated]
  :javascript
    $(function(){
      $('#karma-widget').effect("highlight");
    });
