= render :partial => "/shared/header", :locals => { :title => @species.name, :subtitle => "", :flash => flash }

#scientific_name
  %span.detail Scientific Name
  %h2= @species.name

%table#longevity
  %thead
    %tr
      %th Lifespan
      - if current_user
        %th Actions
  %tbody
    - @species.lifespans.each do |lifespan|
      %tr
        %td.lifespan= lifespan
        - if current_user
          %td.actions   
            = link_to image_tag('edit.png'), edit_lifespan_path(@species, lifespan), :id => "edit_lifespan_#{lifespan.id}", :alt => "Edit lifespan"
            = button_to "Delete", destroy_lifespan_path(@species, lifespan), :id => "delete_lifespan_#{lifespan.id}", :method => :delete, :alt => "Delete lifespan"

%table#adult_weights
  %thead
    %tr
      %th Adult Weight
      - if current_user
        %th Actions
  %tbody
    - @species.adult_weights.each do |adult_weight|
      %tr
        %td.adult_weight= adult_weight
        - if current_user
          %td.actions   
            = link_to image_tag('edit.png'), edit_adult_weight_path(@species, adult_weight), :id => "edit_adult_weight_#{adult_weight.id}", :alt => "Edit adult weight"
            = button_to "Delete", destroy_adult_weight_path(@species, adult_weight), :id => "delete_adult_weight_#{adult_weight.id}", :method => :delete, :alt => "Delete adult weight"

%table#birth_weights
  %thead
    %tr
      %th Birth Weight
      - if current_user
        %th Actions
  %tbody
    - @species.birth_weights.each do |birth_weight|
      %tr
        %td.birth_weight= birth_weight
        - if current_user
          %td.actions
            = link_to image_tag('edit.png'), edit_birth_weight_path(@species, birth_weight), :id => "edit_birth_weight_#{birth_weight.id}", :alt => "Edit birth weight"
            = button_to "Delete", destroy_birth_weight_path(@species, birth_weight), :id => "delete_birth_weight_#{birth_weight.id}", :method => :delete, :alt => "Delete birth weight"

%table#litter_sizes
  %thead
    %tr
      %th Litter Size
      - if current_user
        %th Actions
  %tbody
    - @species.litter_sizes.each do |litter_size|
      %tr
        %td.litter_size= litter_size.measure
        - if current_user
          %td.actions   
            = link_to image_tag('edit.png'), edit_litter_size_path(@species, litter_size), :id => "edit_litter_size_#{litter_size.id}", :alt => "Edit litter size"
            = button_to "Delete", destroy_litter_size_path(@species, litter_size), :id => "delete_litter_size_#{litter_size.id}", :method => :delete, :alt => "Delete litter size"

- if current_user
  = link_to 'Add Adult Weight', new_adult_weight_path(@species), :class => "button"
  = link_to 'Add Birth Weight', new_birth_weight_path(@species), :class => "button"
  = link_to 'Add Lifespan Annotation', new_lifespan_path(@species), :class => "button"
  = link_to 'Add Litter Size', new_litter_size_path(@species), :class => "button"