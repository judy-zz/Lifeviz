%h2 Average
%table#taxatable
  %thead
    %tr
      %th.hidden ID
      %th.hidden Select
      %th.hidden Hover
      %th.hidden Name
      %th Scientific Name
      %th.hidden Lifespan, days
      %th.hidden Birth Weight, g
      %th.hidden Adult Weight, g
      %th.hidden Litter Size
      %th Lifespan
      %th Birth Weight
      %th Adult Weight
      %th Litter Size
  %tbody
    - if @species.empty?
      %tr
        %td{:cols => 6} Species not available.
    -else
      - @species.each do |species|
        %tr.species{:species_id => species.id}
          %td.hidden.id= species.id
          %td.hidden.select
          %td.hidden.hover
          %td.hidden.name= species.name
          %td.name= link_to species.name, species_path(species.id)
          %td.hidden= sprintf("%2.2f", species.statistics[:average_lifespan]) if species.statistics[:average_lifespan]
          %td.hidden= sprintf("%2.2f", species.statistics[:average_birth_weight]) if species.statistics[:average_birth_weight]
          %td.hidden= sprintf("%2.2f", species.statistics[:average_adult_weight]) if species.statistics[:average_adult_weight]
          %td.hidden= sprintf("%2.2f", species.statistics[:average_litter_size]) if species.statistics[:average_litter_size]	
          %td= species.statistics.average_lifespan
          %td= species.statistics.average_birth_weight
          %td= species.statistics.average_adult_weight
          %td= species.statistics.average_litter_size
