%table#taxatable
  %thead
    %tr
    %h2 Average
    %tr
      %th.hidden ID
      %th.hidden Select
      %th.hidden Hover
      %th.hidden Name
      %th Scientific Name
      %th{:class => "{sorter: 'digit'}"} Lifespan, days
      %th{:class => "{sorter: 'digit'}"} Birth Weight, g
      %th{:class => "{sorter: 'digit'}"} Adult Weight, g
      %th{:class => "{sorter: 'digit'}"} Litter Size
  %tbody
    - if @species.empty?
      %tr
        %td{:cols => 6} Species not available.
    -else
      - @species.each do |species|
        %tr.taxon{:taxon_id => species.id}
          %td.hidden.id= species.id
          %td.hidden.select
          %td.hidden.hover
          %td.hidden.name= species.name
          %td.name= link_to species.name, species_path(species.id)
          %td= sprintf("%2.2f", species.statistics.average_lifespan) if species.statistics.average_lifespan
          %td= sprintf("%2.2f", species.statistics.average_birth_weight) if species.statistics.average_birth_weight
          %td= sprintf("%2.2f", species.statistics.average_adult_weight) if species.statistics.average_adult_weight
          %td= sprintf("%2.2f", species.statistics.average_litter_size) if species.statistics.average_litter_size
