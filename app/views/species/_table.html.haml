%table#taxatable
  %thead
    %tr
      %th.hidden ID
      %th.hidden Select
      %th.hidden Hover
      %th Scientific Name
      %th{:class => "{sorter: 'digit'}"} Avg. Lifespan, days
      %th{:class => "{sorter: 'digit'}"} Avg. Birth Weight, g
      %th{:class => "{sorter: 'digit'}"} Avg. Adult Weight, g
      %th{:class => "{sorter: 'digit'}"} Avg. Litter Size
  %tbody
    - if @species.empty?
      %tr
        %td{:cols => 6} Species not available.
    -else
      - @species.each do |species|
        %tr.taxon{:taxon_id => species.id}
          %td.hidden.id= species.id
          %td.hidden.select
          %td.hidden.hover
          %td.name= link_to species.name, species_path(species.id)
          %td= sprintf("%2.2f", species.avg_lifespan) if species.avg_lifespan
          %td= sprintf("%2.2f", species.avg_birth_weight) if species.avg_birth_weight
          %td= sprintf("%2.2f", species.avg_adult_weight) if species.avg_adult_weight
          %td= sprintf("%2.2f", species.avg_litter_size) if species.avg_litter_size
